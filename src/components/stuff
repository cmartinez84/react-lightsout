the tile itself
    plus one
        but not (X+1) % 5 === 0
    minus one
        but not X % 5
    plus five
        but not (X + 5) > 24
    minus five
        but not > 5


function(index){
    const isRightEdge =  (index +1) % 5 === 0;
    const isLeftEdge = index % 5;
    const isBottomEdge = (index + 5) > 24;
    const isTopEdge = index < 5;

    const toTheRight =  index +1;
    const toTheLeft = index -1;
    const below = index + 5;
    const above = index - 5;

    let tilesToTrigger = [index];

    isRightEdge ? '' : tilesToTrigger.push(toTheRight);
    isLeftEdge ? '' : tilesToTrigger.push(toTheLeft);
    isBottomEdge ? '' : tilesToTrigger.push(below);
    isTopEdge ? '' : tilesToTrigger.push(above);
}

